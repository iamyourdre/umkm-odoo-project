<odoo>
    <template id="report_umkm_order_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Laporan Pesanan #<span t-field="doc.name"/></h2>
                        
                        <div class="row mt32 mb32">
                            <div class="col-auto mw-100 mb-2">
                                <strong>Pelanggan:</strong> <p t-field="doc.customer_name"/>
                            </div>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Tanggal:</strong> <p t-field="doc.order_date"/>
                            </div>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Kasir:</strong> <p t-field="doc.user_id.name"/>
                            </div>
                            <div class="col-auto mw-100 mb-2">
                                <strong>Status:</strong> <p t-field="doc.status"/>
                            </div>
                        </div>

                        <table class="table table-sm" style="table-layout: fixed; width: 100%;">
                            <thead>
                                <tr>
                                    <th style="width: 50%;">Menu</th>
                                    <th class="text-right">Qty</th>
                                    <th class="text-right">Harga Satuan</th>
                                    <th class="text-right">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.menu_id.name"/></td>
                                        <td class="text-right"><span t-field="line.quantity"/></td>
                                        <td class="text-right"><span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": user.company_id.currency_id}'/></td>
                                        <td class="text-right"><span t-field="line.subtotal" t-options='{"widget": "monetary", "display_currency": user.company_id.currency_id}'/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        
                        <div class="clearfix">
                            <div class="row" name="total">
                                <div class="col-6 float-right">
                                    <table class="table table-sm">
                                        <tr>
                                            <th>Total Harga</th>
                                            <td class="text-right">
                                                <span t-field="doc.total_price" t-options='{"widget": "monetary", "display_currency": user.company_id.currency_id}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>