<odoo>
    <record id="action_umkm_menu" model="ir.actions.act_window">
        <field name="name">Daftar Menu</field>
        <field name="res_model">umkm.menu</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Buat menu produk baru Anda.</p>
        </field>
    </record>

    <record id="view_umkm_menu_tree" model="ir.ui.view">
        <field name="name">umkm.menu.tree</field>
        <field name="model">umkm.menu</field>
        <field name="arch" type="xml">
            <tree string="Daftar Menu" decoration-danger="stock &lt; low_stock_threshold or stock == 0" decoration-bf="stock &lt; low_stock_threshold">
                <field name="name"/>
                <field name="category_id"/>
                <field name="price" widget="monetary"/>
                <field name="stock"/>
                <field name="low_stock_threshold"/>
                <field name="stock_status"/>
                <field name="is_available"/>
            </tree>
        </field>
    </record>

    <record id="view_umkm_menu_form" model="ir.ui.view">
        <field name="name">umkm.menu.form</field>
        <field name="model">umkm.menu</field>
        <field name="arch" type="xml">
            <form string="Detail Menu">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nama Menu"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                        <group>
                            <field name="is_available"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Manajemen Stok">
                            <group>
                                <field name="stock"/>
                                <field name="low_stock_threshold"/>
                                <field name="stock_status"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="view_umkm_menu_kanban" model="ir.ui.view">
        <field name="name">umkm.menu.kanban</field>
        <field name="model">umkm.menu</field>
        <field name="arch" type="xml">
            <kanban string="Menu">
                <field name="name"/>
                <field name="price"/>
                <field name="stock"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <ul>
                                    <li>Harga: <field name="price" widget="monetary"/></li>
                                    <li>Stok: <field name="stock"/> (<field name="stock_status"/>)</li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>