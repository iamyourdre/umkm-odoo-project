<odoo>
    <record id="view_umkm_dashboard_kanban" model="ir.ui.view">
        <field name="name">umkm.dashboard.kanban</field>
        <field name="model">umkm.order</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="status"/>
                <field name="total_price"/>
                <field name="order_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle"><field name="customer_name"/></span>
                                    </div>
                                    <span class="float-end badge badge-pill" t-attf-class="badge-#{record.status.raw_value === 'confirmed' ? 'success' : record.status.raw_value === 'done' ? 'info' : record.status.raw_value === 'canceled' ? 'danger' : 'secondary'}">
                                        <field name="status"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="order_date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <strong>Rp <t t-esc="record.total_price.value.toLocaleString('id-ID')"/></strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_umkm_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Operasional</field>
        <field name="res_model">umkm.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_umkm_dashboard_kanban"/>
    </record>
</odoo>