<odoo>
    <record id="action_umkm_order" model="ir.actions.act_window">
        <field name="name">Pesanan Pelanggan</field>
        <field name="res_model">umkm.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Buat pesanan baru untuk pelanggan.</p>
        </field>
    </record>

    <record id="view_umkm_order_tree" model="ir.ui.view">
        <field name="name">umkm.order.tree</field>
        <field name="model">umkm.order</field>
        <field name="arch" type="xml">
            <tree string="Daftar Pesanan" decoration-success="status == 'done'" decoration-muted="status == 'canceled'">
                <field name="name"/>
                <field name="order_date"/>
                <field name="customer_name"/>
                <field name="total_price" widget="monetary"/>
                <field name="user_id"/>
                <field name="status" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_umkm_order_form" model="ir.ui.view">
        <field name="name">umkm.order.form</field>
        <field name="model">umkm.order</field>
        <field name="arch" type="xml">
            <form string="Detail Pesanan">
                <header>
                    <button name="action_confirm" string="Konfirmasi Pesanan" type="object" 
                            invisible="status != 'draft'" class="oe_highlight"/>
                    <button name="action_done" string="Selesaikan" type="object" 
                            invisible="status != 'confirmed'"/>
                    <button name="action_cancel" string="Batalkan" type="object" 
                            invisible="status in ('done', 'canceled')"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_name"/>
                            <field name="order_date"/>
                        </group>
                        <group>
                            <field name="user_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Item Pesanan">
                            <field name="order_line_ids" widget="section_and_note_one2many">
                                <tree editable="bottom">
                                    <field name="menu_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="subtotal" widget="monetary" sum="Total Baris"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_price" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                            <div class="clearfix"/>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>