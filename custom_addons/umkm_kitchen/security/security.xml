<odoo>
    <record model="ir.module.category" id="module_category_umkm">
        <field name="name">UMKM Kitchen</field>
        <field name="sequence">10</field>
    </record>

    <!-- Define group_umkm_cashier first so it can be referenced by group_umkm_admin -->
    <record id="group_umkm_cashier" model="res.groups">
        <field name="name">Kasir</field>
        <field name="category_id" ref="module_category_umkm"/>
    </record>

    <record id="group_umkm_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_category_umkm"/>
        <field name="implied_ids" eval="[(4, ref('group_umkm_cashier'))]"/>
        <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_umkm_viewer" model="res.groups">
        <field name="name">Viewer / Finance</field>
        <field name="category_id" ref="module_category_umkm"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="order_rule_cashier" model="ir.rule">
        <field name="name">Kasir Hanya Lihat Order Miliknya</field>
        <field name="model_id" ref="model_umkm_order"/>
        <field name="groups" eval="[(4, ref('group_umkm_cashier'))]"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    </odoo>